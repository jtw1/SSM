<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="helloWorld" class="quickStart.controller.HelloWord">
        <property name="name" value="spring"></property>
    </bean>
    <bean id="helloWorld1" class="quickStart.controller.HelloWord">
        <property name="name" value="spring01"></property>
    </bean>
    <bean id="helloWorld2" class="quickStart.controller.HelloWord">
        <!--调用有参构造器创建对象并赋值-->
        <constructor-arg name="name" value="wjt"></constructor-arg>
    </bean>

    <bean id="person" class="quickStart.controller.Person">
        <constructor-arg name="lastName" value="mm"></constructor-arg>
        <constructor-arg name="email" value="asd@163.com"></constructor-arg>
        <constructor-arg name="gender" value="男"></constructor-arg>
        <constructor-arg name="age" value="18"></constructor-arg>
    </bean>
</beans>